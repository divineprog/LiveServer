  <script src='/js/libs/main.js'></script>
  <script src='/js/libs/gist.js'></script>
</head>

<body>

  <p id='cursorPosIndicator'></p>
  <!-- <p id='mouse' style='position:absolute;right:200px;top:5px;text-align:right;color:white;'></p> -->

  <div id="inletSliderHtml" class="inlet_slider">
    <input class="range" type="range">
  </div>

  <div id="inletSliderJS" class="inlet_slider">
    <input class="range" type="range">
  </div>

  <div id='header'>
    <p id='flashMessage'></p>

    <div id='leftHeader'>
      <% if(everyauth.loggedIn) {%>
        <% include gituser %>
      <% } %>
      <% include execute %>
    </div>

    <div id='centerHeader'>
      <% if(everyauth.loggedIn) {%>
        <div class='filePickerContainer' style='left:0;'>
          <% include htmlfilespicker %>
        </div>
        <div class='filePickerContainer' style='right:0;'>
          <% include jsfilespicker %>
        </div>
        <div id='saveCodeButtonContainer'>
          <div style='position:absolute'>
            <button id='savecode' class='btn disabled' type='button'>Save</button>
          </div>
        </div>
      <% } %>
    </div>

    <div id='rightHeader' >
      
      <% include authentication %>
      
      <div style='float:right;height:50px;'>
        <div style='float:left;margin:25px 5px 0 0;'>
          <p id='serverip' style='color:white;'>Server IP: </p>
        </div>

        <button id='feedback' class='btn btn-primary' style='margin-top:20px;'>Feedback</button>
        <button id='downloadResource' class='btn btn-primary' style='margin-top:20px;margin-right:5px'>Add Resource</button>
      </div>
    </div> <!-- rightHeader -->

  </div> <!-- header div -->

  <!-- editors div -->
  <div id='editors'>
    <div id='codeMirrorHtmlContainer'>
      <textarea id='cmHtml'></textarea>
    </div>
    <div id='codeMirrorJsContainer'>
      <textarea id='cmJS'></textarea>
    </div>
  </div>

  <!-- Documentation -->
  <% include documentation %>

  <!-- Modals -->
  <% include modals %>

  <div id='runMenu' class='CodeMirror-hints' style='display:none;'>
    <p class='CodeMirror-hint CodeMirror-hint-active'>Execute Code</p>
  </div>

  <footer class='footer'>
    <p>Author: Paolo Boschini<br />
    Contact me: <a href="mailto:boschini.paolo@gmail.com">boschini.paolo@gmail.com</p>
  </footer>

</body>
</html>