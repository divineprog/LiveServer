  <script src="/js/vendors/Color.Picker.Classic.js" type="text/javascript"></script>
  <script src="/js/vendors/Color.Space.js" type="text/javascript"></script>
  <script src="/js/libs/colorpicker.js" type="text/javascript"></script>

  <script src='/js/vendors/acorn/acorn.js'></script>
  <script src='/js/vendors/acorn/walk.js'></script>
  <script src='/js/vendors/wormhole.js'></script>
